@model UmsaSofttekFront.ViewModels.UsuariosViewModel

<div class="modal fade" id="usuarioModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Alta y/o modificación de Usuarios.</h5>
            </div>
            @using (Html.BeginForm("GuardarUsuario", "/Usuarios", FormMethod.Post))
            {
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Nombre</label>
                            @Html.EditorFor(x=> x.FirstName, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>

                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Apellido</label>
                            @Html.EditorFor(x=> x.LastName, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Mail</label>
                            @Html.EditorFor(x=> x.Email, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>

                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-5 form-control-label">Contraseña</label>
                            @Html.EditorFor(x=> x.Password, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-5 form-control-label">Role</label>
                            @Html.EditorFor(x=> x.RoleId, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                </div>
            }
        </div>
    </div>
</div>
